# /.screenrc
# configuration for gnu screen

# large scrollback buffer
defscrollback 20000 # default 100
# disable screens annoying statup greeting
startup_message off
# makes the borders less in my face
sorendition "=d bg"
# prevents screen content clobbering (sometimes)
altscreen on

# key bindings
#    navigation
bind j focus down
bind k focus up
bind l focus right
bind h focus left
bind t focus top
bind b focus bottom
#    layouts
bind -k k1 layout select 1 # F1
bind -k k2 layout select 2 # F2
bind -k k3 layout select 3 # F3
bind -k k4 layout select 4 # F4
bind -k k5 layout select 5 # F5
bind -k k6 layout select 6 # F6
bind -k k7 layout select 0 # F7
bind -k k8 layout select 7 # F8
#    resizing
bind -k kr resize -h +10   # right arrow
bind -k kl resize -h -10   # left  arrow
bind -k ku resize -v +4    # up    arrow
bind -k kd resize -v -4    # down  arrow

# environment variables
setenv EDITOR vim
setenv VISUAL vim
term xterm-256color

# set up layouts
# :fold:: init setup
screen -t main 0
screen -t tallterm 1
screen -t termB 2
screen -t termC 3
screen -t altA 4
screen -t altB 5
# :foldend::
# :fold:: Layout 0 - Laptop A
layout new 0#:layout0:laptop:smallscreen
#====================================
#|                |                 |
#|                |                 |
#|                |                 |
#|                |                 |
#|       1        |        0        |
#|                |                 |
#|                |                 |
#|                |                 |
#|                |                 |
#====================================
#|                                  |
#|                2                 |
#|                                  |
#====================================
layout select 0
split
split -v
select 1
focus right
select 0
focus bottom
resize 13 # 12 inner size
select 2
focus top
